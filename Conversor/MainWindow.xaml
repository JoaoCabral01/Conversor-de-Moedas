<Window
    x:Class="Conversor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Conversor.Models"
    xmlns:viewModels="using:Conversor.ViewModels"
    Title="Conversor">


    <StackPanel x:Name="RootPanel" Padding="16" Spacing="12">

        <TextBlock Text="Conversão de Moedas" FontSize="20"/>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <ComboBox Width="100" ItemsSource="{Binding Moedas}" SelectedItem="{Binding MoedaOrigem}"/>
            <TextBox Width="80" Text="{Binding Valor, Mode=TwoWay}"/>
            <TextBlock Text="→" VerticalAlignment="Center"/>
            <ComboBox Width="100" ItemsSource="{Binding Moedas}" SelectedItem="{Binding MoedaDestino}"/>
            <Button Content="Converter" Command="{Binding ConverterCommand}"/>
        </StackPanel>

        <TextBlock Text="Resultado:"/>
        <TextBlock Text="{Binding Resultado}" FontSize="22"/>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Salvar" Command="{Binding SalvarCommand}"/>
            <Button Content="Novo" Command="{Binding NovoCommand}"/>
            <Button Content="Excluir" Command="{Binding ExcluirCommand}"/>
        </StackPanel>

        <TextBlock Text="Histórico" FontSize="18"/>

        <ListView ItemsSource="{Binding Conversoes}" SelectedItem="{Binding Selecionado}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding MoedaOrigem}" Width="50"/>
                        <TextBlock Text="→"/>
                        <TextBlock Text="{Binding MoedaDestino}" Width="50"/>
                        <TextBlock Text="{Binding Valor}" Width="70"/>
                        <TextBlock Text="="/>
                        <TextBlock Text="{Binding Resultado}" Width="90"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Window>
