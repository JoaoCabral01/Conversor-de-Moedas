<Window
    x:Class="Conversor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Conversor de Moedas">

    <Grid Background="#001A3E">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Padding="30" Background="#D8001D">
            <TextBlock Text="Conversor de Moedas"
                       FontSize="50"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontFamily="Comic Sans MS"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="20" Spacing="20">

                <Border Background="#003F8C" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="20">

                        <TextBlock Text="Converter"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="16">

                            <ComboBox Width="140"
                                      ItemsSource="{Binding Moedas}"
                                      SelectedItem="{Binding MoedaOrigem}"
                                      Background="White"
                                      Foreground="#001A3E"/>

                            <TextBox Width="140"
                                     Header="Valor"
                                     Text="{Binding Valor, Mode=TwoWay}"
                                     Background="White"
                                     Foreground="Black"
                                     BorderBrush="#001A3E"/>

                            <ComboBox Width="140"
                                      ItemsSource="{Binding Moedas}"
                                      SelectedItem="{Binding MoedaDestino}"
                                      Background="White"
                                      Foreground="#001A3E"/>

                            <Button Content="Converter"
                                    Padding="12,6"
                                    Width="130"
                                    CornerRadius="6"
                                    Background="#D8001D"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Command="{Binding ConverterCommand}"/>

                        </StackPanel>

                        <Border Background="#001A3E"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Resultado:"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Resultado}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#FFCA28"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="12">

                            <Button Content="Novo"
                                    Width="120"
                                    Padding="8"
                                    Background="White"
                                    Foreground="#001A3E"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding NovoCommand}"/>

                            <Button Content="Salvar"
                                    Width="120"
                                    Padding="8"
                                    Background="#00C853"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding SalvarCommand}"/>

                            <Button Content="Excluir"
                                    Width="120"
                                    Padding="8"
                                    Background="#D50000"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding ExcluirCommand}"/>

                        </StackPanel>

                    </StackPanel>
                </Border>

                <TextBlock Text="Histórico"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"/>

                <Border Background="White" CornerRadius="12" Padding="10">
                    <ListView ItemsSource="{Binding Conversoes}"
                              SelectedItem="{Binding Selecionado, Mode=TwoWay}"
                              Height="260">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="14">

                                    <TextBlock Text="{Binding MoedaOrigem}"
                                               Width="50"
                                               Foreground="#001A3E"/>

                                    <TextBlock Text="→"
                                               FontWeight="Bold"
                                               Foreground="#D8001D"/>

                                    <TextBlock Text="{Binding MoedaDestino}"
                                               Width="50"
                                               Foreground="#001A3E"/>

                                    <TextBlock Text="{Binding Valor}"
                                               Width="80"
                                               Foreground="Black"/>

                                    <TextBlock Text="="
                                               FontWeight="Bold"
                                               Foreground="#D8001D"/>

                                    <TextBlock Text="{Binding Resultado}"
                                               Width="90"
                                               Foreground="#D8001D"
                                               FontWeight="Bold"/>

                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
