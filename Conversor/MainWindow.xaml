<Window
    x:Class="Conversor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Conversor de Moedas">

    <Grid Background="#001A3E">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Padding="30" Background="#D8001D">
            <TextBlock Text="Conversor de Moedas"
                       FontSize="50"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontFamily="Comic Sans MS"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="20" Spacing="20">

                <Border Background="#003F8C" CornerRadius="12" Padding="20">
                    <StackPanel Spacing="20">

                        <TextBlock Text="Converter:"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="16">

                            <ComboBox Width="140"
                                      Header="Origem"
                                      ItemsSource="{Binding Moedas}"
                                      SelectedItem="{Binding MoedaOrigem}"
                                      Background="White"
                                      Foreground="#001A3E"/>

                            <TextBlock Text="--->"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,6"
                                       VerticalAlignment="Bottom"/>

                            <ComboBox Width="140"
                                      Header="Destino"
                                      ItemsSource="{Binding Moedas}"
                                      SelectedItem="{Binding MoedaDestino}"
                                      Background="White"
                                      Foreground="#001A3E"/>

                            <TextBox Width="140"
                                     Header="Valor"
                                     Text="{Binding Valor, Mode=TwoWay}"
                                     Background="White"
                                     Foreground="Black"
                                     BorderBrush="#001A3E"/>

                            <Button Content="Converter"
                                    Padding="12,6"
                                    Width="140"
                                    CornerRadius="6"
                                    Background="#FFCA28"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding ConverterCommand}"/>

                        </StackPanel>

                        <Border Background="#001A3E"
                                CornerRadius="8"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Resultado:"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding Resultado}"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#FFCA28"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#002D66"
                                CornerRadius="8"
                                Padding="14"
                                BorderBrush="#00A8FF"
                                BorderThickness="1">

                            <StackPanel>
                                <TextBlock Text="Como o cálculo funciona"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,0,6"/>

                                <TextBlock Text="Resultado = Valor + (Valor × Porcentagem ÷ 100)"
                                           Foreground="#FFCA28"
                                           FontSize="16"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Exemplo:"
                                           Margin="0,10,0,0"
                                           FontSize="16"
                                           Foreground="White"
                                           FontWeight="Bold"/>

                                <TextBlock Text="• Valor = 100"
                                           Foreground="White"/>
                                <TextBlock Text="• Porcentagem = 10%"
                                           Foreground="White"/>
                                <TextBlock Text="• Resultado = 100 + (100 × 10 ÷ 100) = 110"
                                           Foreground="#FFCA28"
                                           FontWeight="Bold"/>
                            </StackPanel>

                        </Border>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="12">

                            <Button Content="Novo"
                                    Width="120"
                                    Padding="8"
                                    Background="White"
                                    Foreground="#001A3E"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding NovoCommand}"/>

                            <Button Content="Salvar"
                                    Width="120"
                                    Padding="8"
                                    Background="#00C853"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding SalvarCommand}"/>

                            <Button Content="Excluir"
                                    Width="120"
                                    Padding="8"
                                    Background="#D50000"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    CornerRadius="6"
                                    Command="{Binding ExcluirCommand}"/>

                        </StackPanel>

                    </StackPanel>
                </Border>

                <TextBlock Text="Histórico e Calculadora:"
                           FontSize="25"
                           FontWeight="Bold"
                           Foreground="White"/>

                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" CornerRadius="12" Padding="10">
                        <ListView ItemsSource="{Binding Conversoes}"
                                  SelectedItem="{Binding Selecionado, Mode=TwoWay}"
                                  Height="320">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="14">
                                        <TextBlock Text="{Binding MoedaOrigem}" Width="50" Foreground="#001A3E"/>
                                        <TextBlock Text="→" FontWeight="Bold" Foreground="#D8001D"/>
                                        <TextBlock Text="{Binding MoedaDestino}" Width="50" Foreground="#001A3E"/>
                                        <TextBlock Text="{Binding Valor}" Width="80" Foreground="Black"/>
                                        <TextBlock Text="=" FontWeight="Bold" Foreground="#D8001D"/>
                                        <TextBlock Text="{Binding Resultado}" Width="90" Foreground="#D8001D" FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <Border Background="#003F8C"
                            CornerRadius="12"
                            Padding="16"
                            Grid.Column="1">

                        <StackPanel Spacing="10">

                            <TextBlock Text="Calculadora"
                                       FontSize="22"
                                       Foreground="White"
                                       FontWeight="Bold"/>

                            <Border Background="White" CornerRadius="8" Padding="10">
                                <TextBlock Text="{Binding CalcDisplay}"
                                           FontSize="30"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           Foreground="#001A3E"/>
                            </Border>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="45"/>
                                    <RowDefinition Height="45"/>
                                    <RowDefinition Height="45"/>
                                    <RowDefinition Height="45"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Content="7" Command="{Binding CalcPressCommand}" CommandParameter="7" Margin="4"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="8" Command="{Binding CalcPressCommand}" CommandParameter="8" Margin="4"/>
                                <Button Grid.Row="0" Grid.Column="2" Content="9" Command="{Binding CalcPressCommand}" CommandParameter="9" Margin="4"/>
                                <Button Grid.Row="0" Grid.Column="3" Content="÷" Command="{Binding CalcPressCommand}" CommandParameter="/" Margin="4" Background="#D8001D" Foreground="White"/>

                                <Button Grid.Row="1" Grid.Column="0" Content="4" Command="{Binding CalcPressCommand}" CommandParameter="4" Margin="4"/>
                                <Button Grid.Row="1" Grid.Column="1" Content="5" Command="{Binding CalcPressCommand}" CommandParameter="5" Margin="4"/>
                                <Button Grid.Row="1" Grid.Column="2" Content="6" Command="{Binding CalcPressCommand}" CommandParameter="6" Margin="4"/>
                                <Button Grid.Row="1" Grid.Column="3" Content="X" Command="{Binding CalcPressCommand}" CommandParameter="*" Margin="4" Background="#D8001D" Foreground="White"/>

                                <Button Grid.Row="2" Grid.Column="0" Content="1" Command="{Binding CalcPressCommand}" CommandParameter="1" Margin="4"/>
                                <Button Grid.Row="2" Grid.Column="1" Content="2" Command="{Binding CalcPressCommand}" CommandParameter="2" Margin="4"/>
                                <Button Grid.Row="2" Grid.Column="2" Content="3" Command="{Binding CalcPressCommand}" CommandParameter="3" Margin="4"/>
                                <Button Grid.Row="2" Grid.Column="3" Content="-" Command="{Binding CalcPressCommand}" CommandParameter="-" Margin="4" Background="#D8001D" Foreground="White"/>

                                <Button Grid.Row="3" Grid.Column="0" Content="0" Command="{Binding CalcPressCommand}" CommandParameter="0" Margin="4"/>
                                <Button Grid.Row="3" Grid.Column="1" Content="." Command="{Binding CalcPressCommand}" CommandParameter="." Margin="4"/>
                                <Button Grid.Row="3" Grid.Column="2" Content="C" Command="{Binding CalcPressCommand}" CommandParameter="C" Margin="4" Background="#FFCA28" Foreground="Black"/>
                                <Button Grid.Row="3" Grid.Column="3" Content="+" Command="{Binding CalcPressCommand}" CommandParameter="+" Margin="4" Background="#D8001D" Foreground="White"/>

                                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Content="=" Command="{Binding CalcPressCommand}" CommandParameter="=" Margin="4" Background="#00C853" Foreground="White" FontWeight="Bold"/>

                            </Grid>

                        </StackPanel>

                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
